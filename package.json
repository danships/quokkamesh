{
  "name": "agentmesh",
  "version": "0.1.0",
  "type": "module",
  "description": "P2P agent mesh proof of concept",
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "concurrently --kill-others-on-fail pnpm:lint:*",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "format": "eslint . --fix && prettier --write .",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier --check"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "@chainsafe/libp2p-noise": "^17.0.0",
    "@chainsafe/libp2p-yamux": "^8.0.1",
    "@libp2p/bootstrap": "^12.0.11",
    "@libp2p/identify": "^4.0.10",
    "@libp2p/interface": "^3.1.0",
    "@libp2p/tcp": "^11.0.10",
    "@noble/ed25519": "^3.0.0",
    "@noble/hashes": "^1.7.0",
    "libp2p": "^3.1.3",
    "uint8arrays": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^25.2.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-unicorn": "^58.0.0",
    "globals": "^16.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.0.0"
  }
}
